@page
@model StudentMind.Razor.Pages.AppointmentPages.DeleteModel

@{
    ViewData["Title"] = "Delete Appointment";
}

<div class="container">
    <h2 class="mb-4">Delete Appointment</h2>

    <h4 class="text-danger">Are you sure you want to delete this appointment?</h4>

    <dl class="row">
        <dt class="col-sm-3">Psychologist</dt>
        <dd class="col-sm-9">@Model.Appointment.Psychologist?.FullName</dd>

        <dt class="col-sm-3">Student</dt>
        <dd class="col-sm-9">@Model.Appointment.User?.Username</dd>

        <dt class="col-sm-3">Start Time</dt>
        <dd class="col-sm-9">@Model.Appointment.StartTime.LocalDateTime</dd>

        <dt class="col-sm-3">End Time</dt>
        <dd class="col-sm-9">@Model.Appointment.EndTime.LocalDateTime</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">@Model.Appointment.Status</dd>

        <dt class="col-sm-3">Notes</dt>
        <dd class="col-sm-9">@Model.Appointment.Note</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Appointment.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./Index" class="btn btn-secondary ml-2">Cancel</a>
    </form>
</div>