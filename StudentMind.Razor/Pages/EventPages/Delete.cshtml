@page
@model StudentMind.Razor.Pages.EventPages.DeleteModel
@{
    ViewData["Title"] = "Delete Event - Student Mind";
}

<div class="container py-5">
    <div class="text-center mb-5 fade-in">
        <h1 class="welcome-header">Delete Event <i class="fas fa-trash-alt text-coral"></i></h1>
        <p class="lead text-muted">Are you sure you want to delete this event?</p>
    </div>

    @if (TempData["DebugMessage"] != null)
    {
        <div class="alert alert-info" role="alert">
            @TempData["DebugMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row justify-content-center fade-in">
        <div class="col-md-6">
            <dl class="row">
                <dt class="col-sm-4">Name</dt>
                <dd class="col-sm-8">@Model.EventDTO.Name</dd>

                <dt class="col-sm-4">Description</dt>
                <dd class="col-sm-8">@Model.EventDTO.Description</dd>

                <dt class="col-sm-4">Start Date</dt>
                <dd class="col-sm-8">@Model.EventDTO.StartDate.ToString("MMM dd, yyyy")</dd>

                <dt class="col-sm-4">End Date</dt>
                <dd class="col-sm-8">@Model.EventDTO.EndDate.ToString("MMM dd, yyyy")</dd>

                <dt class="col-sm-4">Host</dt>
                <dd class="col-sm-8">@Model.EventDTO.HostName</dd>
            </dl>

            <form method="post">
                <input type="hidden" asp-for="EventDTO.Id" />
                <div class="text-center">
                    <button type="submit" class="btn cobalt-blue-btn-dark">Delete</button>
                    <a asp-page="Index" class="btn cobalt-blue-btn">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>