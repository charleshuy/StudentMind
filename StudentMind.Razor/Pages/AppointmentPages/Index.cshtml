@page
@model StudentMind.Razor.Pages.AppointmentPages.IndexModel
@{
    ViewData["Title"] = "Appointments";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Appointments</h2>
        <a asp-page="Create" class="btn btn-primary">Create New Appointment</a>
    </div>

    <table class="table table-striped table-hover">
        <thead class="thead-light">
            <tr>
                <th>Psychologist</th>
                <th>Student</th>
                <th>Start Time</th>
                <th>End Time</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var appointment in Model.Appointments)
            {
                <tr>
                    <td>@appointment.Psychologist?.FullName</td>
                    <td>@appointment.User?.Username</td>
                    <td>@appointment.StartTime.LocalDateTime</td>
                    <td>@appointment.EndTime.LocalDateTime</td>
                    <td>@appointment.Status</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-page="./Edit" asp-route-id="@appointment.Id" class="btn btn-sm btn-warning">Edit</a>
                            <a asp-page="./Details" asp-route-id="@appointment.Id" class="btn btn-sm btn-info">Details</a>
                            <a asp-page="./Delete" asp-route-id="@appointment.Id" class="btn btn-sm btn-danger">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>