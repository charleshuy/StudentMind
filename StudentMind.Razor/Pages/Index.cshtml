@page
@model IndexModel
@{
    ViewData["Title"] = "Home - Student Mind";
}

<div class="text-center">
    @if (!string.IsNullOrEmpty(Model.UserName))
    {
        <h1 class="display-4">Welcome, @Model.UserName!</h1>
    }
    else
    {
        <h1 class="display-4">Welcome to the School Mental Health Support System</h1>
        <p>Your trusted platform for student well-being.</p>
    }
</div>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-4">
            <h3>About Our School</h3>
            <p>Providing quality education and mental health support for students.</p>
        </div>
        <div class="col-md-4">
            <h3>Mental Health Resources</h3>
            <p>Access materials on psychological well-being and self-care strategies.</p>
        </div>
        <div class="col-md-4">
            <h3>Community Blog</h3>
            <p>Read shared experiences and expert advice on student mental health.</p>
        </div>
    </div>

    <hr>

    <div class="text-center">
        @if (!string.IsNullOrEmpty(Model.UserName))
        {
            <h2>Explore Your Mind</h2>
            <p><a class="btn btn-primary" asp-page="/TakeSurvey/Index">Take a survey</a></p>
        }
        else
        {
            <h2>Get Started</h2>
            <p><a class="btn btn-primary" asp-page="/Login">Login</a></p>
            <p class="mt-2"><strong>or</strong></p>
            <p><a class="btn btn-primary" asp-page="/Register">Create an Account</a></p>
        }
    </div>
</div>