@page
@model StudentMind.Razor.Pages.TakeSurvey.IndexModel
@{
    ViewData["Title"] = "Select a Survey";
}

<h2 class="mb-4">Select a Survey</h2>

<div class="container">
    <div class="row">
        @foreach (var survey in Model.Surveys)
        {
            <div class="col-md-4 mb-3">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@survey.Name</h5>
                        <p class="card-text">@survey.Description</p>

                        <a asp-page="Start" asp-route-surveyId="@survey.Id" class="btn btn-primary">Start Survey</a>

                        @if (Model.SurveysAlreadyTaken.Contains(survey.Id))
                        {
                            <a asp-page="SurveyHistory" asp-route-surveyId="@survey.Id" class="btn btn-primary">View History</a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>
