@page
@model StudentMind.Razor.Pages.TakeSurvey.SubmitModel
@{
    ViewData["Title"] = "Survey Results";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h2 class="text-center mb-4">Survey Results</h2>

        <p class="fs-5">Your health category: <strong>@Model.HealthCategory</strong></p>
        <p class="fs-5">Your total score: <strong>@Model.TotalScore</strong></p>

        <div class="text-center mt-4">
            <a href="/" class="btn btn-primary">Back to Home</a>
        </div>
    </div>
</div>