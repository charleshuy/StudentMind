@model StudentMind.Razor.Pages.SurveyResponsePages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@* <p> *@
@*     <a asp-page="Create">Create New</a> *@
@* </p> *@
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SurveyResponse[0].Survey)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SurveyResponse[0].User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SurveyResponse[0].Question)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SurveyResponse[0].Choice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SurveyResponse[0].CreatedTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SurveyResponse[0].LastUpdatedTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.SurveyResponse) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Survey.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Question.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Choice.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastUpdatedTime)
            </td>
            @* <td> *@
            @*     @* <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> | *@
            @*     @* <a asp-page="./Details" asp-route-id="@item.Id">Details</a> | *@ 
            @*     @* <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a> *@
            @* </td> *@
        </tr>
}
    </tbody>
</table>
@if (Model.TotalPages > 1)
{
    <nav>
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-page="./Index"
                       asp-route-pageNumber="@i"
                       >
                        @i
                    </a>
                </li>
            }
        </ul>
    </nav>
}